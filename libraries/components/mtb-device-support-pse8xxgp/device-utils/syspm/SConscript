from building import *
import rtconfig
Import('RTT_ROOT')

# get current directory
cwd = GetCurrentDir()
src = []
path = []

if GetDepend(['RT_USING_SERIAL']):
    src += ['source/mtb_syspm_callbacks_scb_uart.c']

path = [cwd + '/include']

group = DefineGroup('Libraries', src, depend=[''], CPPPATH=path)
Return('group')
